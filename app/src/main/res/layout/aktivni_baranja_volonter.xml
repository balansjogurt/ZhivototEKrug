<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:background="@color/snow_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rw1Picture"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/rw1Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rw1ActivityDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1Activity"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rw1DateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1ActivityDesc"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rw1Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1DateTime"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_4"/>

        <TextView
            android:id="@+id/rw1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1Location"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rw1Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1Name"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rw1Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1Contact"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_send" />

        <TextView
            android:id="@+id/rw1Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1Contact"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_done" />

        <TextView
            android:id="@+id/rw1Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rw1Contact"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_info" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>