<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:background="@color/snow_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/rwActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rwDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/ic_delete" />

        <TextView
            android:id="@+id/rwActivityDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rwActivity"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rwTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rwActivityDesc"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rwAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rwTime"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rwVolunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rwAddress"
            android:textSize="15dp"
            android:textColor="@color/snow_2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/rwStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rwVolunteer"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textColor="@color/snow_2"/>

        <TextView
            android:id="@+id/rwInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/rwVolunteer"
            card_view:layout_constraintRight_toLeftOf="@+id/rwStatus"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>